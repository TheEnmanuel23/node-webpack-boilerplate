{
  "name": "boilerplate_node_and_webpack",
  "version": "1.0.0",
  "description": "Boilerplate - Node server with webapck with hot mdule replacement",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "build": "webpack --env=production --progress",
    "build:dev": "webpack --env=development --progress",
    "dev": "NODE_ENV=development node server.js",
    "start": "node server.js"
  },
  "standard": {
    "ignore": [
      "**/public/",
      "webpack.**"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:TheEnmanuel23/node-webpack-boilerplate.git"
  },
  "author": "enmisac@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TheEnmanuel23/node-webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/TheEnmanuel23/node-webpack-boilerplate#README",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "ejs": "^2.6.1",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^1.0.1",
    "file-loader": "^2.0.0",
    "ghooks": "^2.0.4",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.10.0",
    "sass-loader": "^7.1.0",
    "standard": "^12.0.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-merge": "^4.1.4"
  }
}
